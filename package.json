{
  "name": "media-mesh",
  "version": "0.0.1",
  "description": "MediaMesh Platform - CMS + Discovery Microservices",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "services/*",
    "shared"
  ],
  "scripts": {
    "prisma:generate:auth": "npm --workspace @mediamesh/auth-service run prisma:generate",
    "prisma:generate:cms": "npm --workspace @mediamesh/cms-service run prisma:generate",
    "prisma:generate:discovery": "npm --workspace @mediamesh/discovery-service run prisma:generate",
    "prisma:generate:ingest": "npm --workspace @mediamesh/ingest-service run prisma:generate",
    "prisma:generate:media": "npm --workspace @mediamesh/media-service run prisma:generate",
    "prisma:generate:metadata": "npm --workspace @mediamesh/metadata-service run prisma:generate",
    "prisma:generate:search": "npm --workspace @mediamesh/search-service run prisma:generate",

    "prisma:generate:all": "npm run prisma:generate:auth && npm run prisma:generate:cms && npm run prisma:generate:metadata && npm run prisma:generate:discovery && npm run prisma:generate:ingest && npm run prisma:generate:media && npm run prisma:generate:metadata && npm run prisma:generate:search",

    "build:all": "npm run prisma:generate:all && npm run build --workspaces --if-present",

    "format": "prettier --write \"services/**/*.ts\" \"shared/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{services,shared,test}/**/*.ts\" --fix",
    "lint:all": "npm run lint --workspaces --if-present",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:all": "npm run test --workspaces --if-present",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:dev": "pm2 start ecosystem.config.js",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "start:debug": "nest start --debug --watch",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:delete": "pm2 delete all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-fastify": "^11.0.1",
    "dotenv": "^17.2.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.2.0",
    "pm2": "^6.0.14",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "services/**/*.(t|j)s",
      "shared/**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/shared/$1"
    },
    "projects": [
      "<rootDir>/services/*",
      "<rootDir>/shared"
    ]
  },
  "overrides": {
    "diff": "^8.0.3"
  }
}