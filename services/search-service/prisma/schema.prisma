// Prisma Schema for Search Service
// Database: search_db

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ContentType {
  PROGRAM
  EPISODE
  MOVIE
  SERIES
}

model SearchIndex {
  id          String      @id @default(uuid())
  contentId   String      @unique
  contentType ContentType
  title       String
  description String?
  category    String?
  language    String?
  tags        String[]    @default([])
  indexedAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("search_index")
  @@index([contentId])
  @@index([contentType])
  @@index([category])
  @@index([language])
  @@index([indexedAt])
}
